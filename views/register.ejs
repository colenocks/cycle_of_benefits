    /> -->
    <!-- Custom Styles -->
    <link rel="stylesheet" href="css/styles.css" />
    <link rel="stylesheet" href="css/dynamic.css" />
    <link rel="stylesheet" href="css/mobile.css" />
    <!-- Google Fonts Api -->
    <link
      href="https://fonts.googleapis.com/css?family=Karla&display=swap"
      rel="stylesheet"
    />
    <link
      href="//fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,700,700i"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="main-container">
      <!-- Main Body Section -->
      <main class="main-content">
        <div class="signup-div">
          <div class="signup-form">
            <form
              id="form"
              name="signupform"
              action="/submitregister"
              method="post"
            >
              <div class="signup-heading">
                <a href="./"
                  ><img
                    src="https://res.cloudinary.com/icardi/image/upload/v1577780709/cyobLogo_200x200_gy6opt.png"
                    alt="Logo"
                    height="80px"
                    width="80px"
                /></a>
                <Label>Register with Cycle of benefits</Label>
                <hr />
              </div>
              <div class="input-block">
                <label for="first_name">First Name</label>
                <div>
                  <input
                    id="reg_firstname"
                    type="text"
                    name="first_name"
                    placeholder="First Name"
                  />
                </div>
              </div>
              <div class="input-block">
                <label for="last_name">Last Name</label>
                <div>
                  <input
                    id="reg_lastname"
                    type="text"
                    name="last_name"
                    placeholder="Last Name"
                  />
                </div>
              </div>
              <div class="input-block">
                <label for="username">Username</label>
                <div>
                  <input
                    id="reg_username"
                    type="text"
                    name="username"
                    placeholder="Username"
                  />
                </div>
              </div>
              <div class="input-block">
                <label for="email">Email</label>
                <div>
                  <input
                    id="reg_email"
                    type="email"
                    name="email"
                    placeholder="Email"
                  />
                </div>
              </div>
              <div class="input-block">
                <label for="password">Password</label>
                <div>
                  <input
                    id="reg_password"
                    type="password"
                    name="password"
                    placeholder="Password"
                  />
                </div>
              </div>
              <div class="input-block">
                <label for="confirm_password">Confirm Password</label>
                <div>
                  <input
                    id="reg_conf_password"
                    type="password"
                    name="confirm_password"
                    placeholder="Confirm Password"
                  />
                </div>
              </div>
              <div class="form-button">
                <input type="submit" class="left-btn my-btn" value="SIGN UP" />
                <a class="right-btn" href="./">Cancel</a>
              </div>
              <hr />
              <div class="form-info">
                <p>
                  Got an Account Already?
                  <a href="./login">Login Here!</a>
                </p>
              </div>
            </form>
          </div>
        </div>
      </main>
      <footer class="main-footer">
        <ul>
          <li><a href="./contact">Contact Us</a></li>
          <li><a href="./about">About</a></li>
          <li>
            <a href="#"><span class="green-text">Market Place</span></a>
          </li>
        </ul>
        <p>
          All rights reserved | Created & Designed by Cole &copy; 2019.
        </p>
        <div class="footer-icon">
          <a href="#" target="_blank"><i class="fab fa-github fa-2x"></i></a>
          <a href="#" target="_blank"><i class="fab fa-linkedin fa-2x"></i></a>
          <a href="#" target="_blank"><i class="fab fa-twitter fa-2x"></i></a>
        </div>
      </footer>
    </div>
    <!--Main Wrapper div-->
    <!-- Optional JavaScript -->
    <script type="module" src="/app.js"></script>
  </body>
</html>
